<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.co.taxinet.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <!-- Maps permission -->
    <permission
        android:name="co.vn.taxinet.mobile.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="co.vn.taxinet.mobile.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- GCM connects to Internet Services. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="vn.co.taxinet.mobile.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="vn.co.taxinet.mobile.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Main activity. -->
    <application
        android:name="vn.co.taxinet.mobile.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >

        <!-- Main Activity -->
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.MapActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <!-- Points to searchable activity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".newactivity.MapActivity" />

            <!-- Points to searchable meta data -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".newactivity.MapActivity" />
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.PickAddressActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/pick_address"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <!-- Points to searchable activity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".newactivity.PickAddressActivity" />

            <!-- Points to searchable meta data -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.StartActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.ChangPasswordActivity"
            android:label="@string/change_password" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.ListPromotionTripActivity"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.MapActivity" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.FavoriteDriverActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.ForgotPasswordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.FindPromotionTripActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.MapActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!-- Points to searchable activity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value="vn.co.taxinet.mobile.newactivity.FindPromotionTripActivity" />

            <!-- Points to searchable meta data -->
            <meta-data
                android:name="android.app.searchable"
