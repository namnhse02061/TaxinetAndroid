        <activity
            android:name="vn.co.taxinet.mobile.newactivity.ListRegisteredPromotionTripActivity"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.MapActivity" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.TermActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.AboutActivity"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.MapActivity" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.SupportActivity"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.MapActivity" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.TripHistoryActivity"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.MapActivity" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.TripHistoryDetailsActivity"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.TripHistoryActivity" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.ProfileActivity"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.MapActivity" >
        </activity>
        <activity
            android:name="vn.co.taxinet.mobile.newactivity.RegisterdPromotionTripDetails"
            android:label="@string/app_name"
            android:parentActivityName="vn.co.taxinet.mobile.newactivity.ListRegisteredPromotionTripActivity" >
        </activity>

        <receiver
            android:name="vn.co.taxinet.mobile.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="vn.co.taxinet.mobile" />
            </intent-filter>
        </receiver>

        <service android:name="vn.co.taxinet.mobile.gcm.GcmIntentService" />

        <!-- Points to searchable activity -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".newactivity.MapActivity" />

        <!-- Points to searchable meta data -->
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <provider
            android:name="vn.co.taxinet.mobile.googleapi.PlaceProvider"
            android:authorities="vn.co.taxinet.mobile.googleapi.PlaceProvider"
            android:exported="false" />

        <!-- Goolge API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAdwT-i2JYCQOQye7jaXXvf3AlJNOJaUi4" />
        <meta-data
